import random

#Variables
name = "Toe-Mas"
question = '"Is Mayonaise an instrument?"'
answer = ""

#Assigns random number between 1 and 9
random_number = random.randint(1, 15)

#8Ball Logic
if random_number == 1:
  answer = "Yes - definitely."
elif random_number == 2:
  answer = "Without a doubt."
elif random_number == 4:
  answer = "Reply hazy, try again."
elif random_number == 5:
  answer = "Ask again later."
elif random_number == 6:
  answer = "Better not tell you now."
elif random_number == 7:
  answer = "My sources say no."
elif random_number == 8:
  answer = "Outlook not so good."
elif random_number == 9:
  answer = "Very doubtful."
elif random_number == 10:
  answer = "Hell no!"
elif random_number == 11:
  answer = "Hell yes!"
elif random_number == 12:
  answer = "I guess so.."
elif random_number == 13:
  answer = "Why should I tell you?"
elif random_number == 14:
  answer = "I'm not telling..."
elif random_number == 15:
  answer = "Give me $5 and I'll tell you anything you want to know."
else:
  answer= "ERROR"

#Final print
if name == "":
  print("Question:", question)
elif question == "":
  print("")
else:
  print(name,"asks:")
  print(question)

if question == '':
  print("Magic 8 Ball: You have to ask me a question if you want an answer!")
else:
  print("")
  print("Magic 8-Ball's answer: ")
  print('"',answer,'"')
